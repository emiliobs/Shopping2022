@model Shopping2022.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Ciudad</h1>

<h3>¿Esta seguro que querer Borrar la Ciudad?</h3>
<div>
    <partial name="_CityDetails" />


    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="DetailsState" class="btn btn-outline-dark" asp-route-id="@Model?.State.Id">Regresar</a>
    </form>
</div>
